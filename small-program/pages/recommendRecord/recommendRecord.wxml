<view class="container">
<!-- 顶部筛选 -->
    <view class="filter-wrapper">
        <view class="filter" bind:tap="onFilterClick">
        {{selectTitle}}
        <view class="triangle-up" animation="{{animationData}}"></view> 
        </view>
    </view>

<!-- 下拉需要显示的列表 -->
    <view class="select_box" wx:if="{{select}}">
        <block  wx:for="{{titleArray}}" wx:key="unique">
            <view class="select_item {{selectTitle==item.stateDesc ? 'select_item_choose':''}}" bindtap="onSelectedClick" data-desc="{{item.stateDesc}}" data-state="{{item.state}}">{{item.stateDesc}}
                <image  class="select_icon"  style="opacity:{{selectTitle==item.stateDesc ?1:0}}" src="data:image/png;base64,"></image>
            </view>
        </block>
        
    </view>
<!-- 列表list -->
    <view class="recommand_list" wx:for="{{selectArray}}">
            <view class="recommand_list_item">
                <!-- 第一行 -->
                <view class="firstRow">
                    <block wx:if="{{item.state == 1}}">
                        <view class="name">{{item.name}}</view>
                        <view class="phone">{{item.phone}}</view>
                        <view class="stateDesc">{{item.stateDesc}}</view>
                    </block>
                        
                    <block wx:if="{{item.state == 2}}">
                        <view class="name">{{item.name}}</view>
                        <view class="phone">{{item.phone}}</view>
                        <view class="stateDesc blue">{{item.stateDesc}}</view>
                    </block>
                    <block wx:if="{{item.state == 3}}">
                        <view class="name">{{item.name}}</view>
                        <view class="phone">{{item.phone}}</view>
                        <view class="stateDesc red">{{item.stateDesc}}</view>
                    </block>
                    <block wx:if="{{item.state == 4}}">
                        <view class="name light">{{item.name}}</view>
                        <view class="phone light">{{item.phone}}</view>
                        <view class="stateDesc light">{{item.stateDesc}}</view>
                    </block>
                    <!-- <block wx:else>
                        <view class="name">{{item.name}}</view>
                        <view class="phone">{{item.phone}}</view>
                        <view class="stateDesc">{{item.stateDesc}}</view>
                    </block> -->
                </view>
                <!-- 第二行 -->
                <block wx:if="{{item.state == 4}}">
                    <view class="secondRow light">{{item.carName}}</view>
                </block>
                 <block wx:else>
                    <view class="secondRow">{{item.carName}}</view>
                </block>
                <!-- 第三行 -->
                <view class="thirdRow"></view>
                <!-- 第四行 -->
                <view class="fourthRow">
                        <block wx:if="{{item.state == 4}}">
                            <view class="storeName light">{{item.storeName}}</view>
                            <view class="time light">{{item.time}}</view>
                        </block>
                        <block wx:else>
                            <view class="storeName">{{item.storeName}}</view>
                            <view class="time">{{item.time}}</view>
                        </block>
                </view>
            </view>
    </view>
</view>

